# Template for Kubernetes Secret: mysql-root-password-secret
# Copy this file to mysql-root-password-secret.yaml, fill in your real value, and apply with:
# kubectl apply -f mysql-root-password-secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: mysql-root-password-secret
type: Opaque
data:
  mysql-root-password: <base64-encoded-root-password>

# To encode a value, use:
# echo -n 'your-root-password-here' | base64
