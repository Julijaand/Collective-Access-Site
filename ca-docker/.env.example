# ===========================================
# COLLECTIVE ACCESS - ENVIRONMENT TEMPLATE
# Copy this to .env and customize
# ===========================================

# ===========================================
# DATABASE
# ===========================================
DB_HOST=db
DB_PORT=3306
DB_NAME=ca
DB_USER=ca_user
DB_PASSWORD=CHANGE_ME_SecurePassword
MYSQL_ROOT_PASSWORD=CHANGE_ME_RootPassword
MYSQL_VERSION=8.0

# ===========================================
# SITE & ADMIN
# ===========================================
CA_SITE_HOST=localhost:8080
CA_ADMIN_EMAIL=admin@example.com
CA_TIMEZONE=UTC
# Note: CA installer generates a random secure password for the administrator account

# ===========================================
# INSTANCE (Multi-tenant SaaS)
# ===========================================
CA_INSTANCE_ID=local_dev
CA_TENANT_NAME=default

# ===========================================
# DOCKER CONTAINERS (optional overrides)
# ===========================================
CA_PORT=8080
CA_APP_DIR=/var/www/html/ca
DB_CONTAINER_NAME=ca-db
CA_CONTAINER_NAME=ca-app
